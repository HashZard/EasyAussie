20250310 新服务器部署

sudo apt update 

# 安装Git,后需手动配置SSH
sudo apt install -y git

# 复制Google token
scp ~/.config/google_tasks/token.json root@47.254.237.49:/etc/google_tasks/token.json

# 安装Python3
sudo apt install -y python3 python3-venv python3-pip

# 创建venv虚拟环境
cd /var/www/EasyAussie

# 安装Nginx
sudo apt install -y nginx
# 启动 Nginx 并设置开机自启
sudo systemctl start nginx
sudo systemctl enable nginx
sudo systemctl status nginx

# 安装Gunicorn
source /var/www/EasyAussie/venv/bin/activate  # 激活虚拟环境
pip install gunicorn  # 安装 gunicorn
deactivate  # 退出虚拟环境

# 创建log路径,添加权限
mkdir -p /var/log/inspect
chown -R www-data:www-data /var/log/inspect
chmod -R 755 /var/log/inspect

